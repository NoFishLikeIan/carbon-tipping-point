#!/bin/bash

#SBATCH --job-name=tipping-test
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --array=0-1
#SBATCH --time=00:10:00
#SBATCH --partition=rome
#SBATCH --mail-type=BEGIN,END,FAIL,TIME_LIMIT_80
#SBATCH -o ./logs/out/JOB%A_%a.out 
#SBATCH -e ./logs/error/JOB%A_%a.out
#SBATCH --mail-user=a.titton@uva.nl

module load 2023
module load Julia/1.9.2-linux-x86_64

cd $HOME/scc-tipping-points # Move to base directory
mkdir -p "$TMPDIR"/data # Create scratch directory with user name
rsync data/calibration.jld2 "$TMPDIR"/data # Copy calibration data to scratch

# Extract parameters at the SLURM_ARRAY_TASK_ID from parameters.json
jq_command='.parameters[$id | tonumber] | "--rra \(.rra) --eis \(.eis) --threshold \(.threshold) --leveldamages \(.leveldamages) --negative \(.negative)"'
params=$(jq -r --arg id "$SLURM_ARRAY_TASK_ID" "$jq_command" jobs/parameters.json)

# Run script 
julia --project scripts/runoptimal.jl \
    -d "data" -s "test-simulation" --verbose 1 --overwrite \
    -N 11 $params

# Copy results back to home
rsync -avzu "$TMPDIR"/data $HOME/scc-tipping-points